{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist", 
        "cleanDistDir": true
      }
    },
    {
      "src": "api/ssr.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "api/ssr.js" 
    }
  ]
}
